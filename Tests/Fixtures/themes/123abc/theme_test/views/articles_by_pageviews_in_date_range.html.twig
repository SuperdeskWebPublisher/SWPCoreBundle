Articles by page views in last 7 days
{% gimmelist article from articles|order('pageViews', 'desc')|dateRange('now', '- 7 days') %}
    <a href="{{ url(article) }}">{{ article.title }}</a> Page views count: {{ article.articleStatistics.pageViewsNumber }}
{% endgimmelist %}

